<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp"
    tools:context=".CheckupActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textColor="#b3b3b3"
        android:textSize="15dp"/>

    <Spinner
        android:id="@+id/spinnerpatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Patients' Name"
        android:textAppearance="?android:textAppearanceMedium" />

    <EditText
        android:id="@+id/editTexttemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="number"
        android:textSize="15dp"
        android:hint="Temperature" />

    <Spinner
        android:id="@+id/spinnerchills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:textAppearanceMedium"
        android:hint="Chills" />


    <Spinner
        android:id="@+id/spinner_new_chest_pain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:textAppearanceMedium"
        android:hint="new Chest pain"/>

    <Spinner
        android:id="@+id/spinnerHeadache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Headache"
        android:textAppearance="?android:textAppearanceMedium" />


    <Spinner
        android:id="@+id/spinnerCough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Cough"
        android:textAppearance="?android:textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerdifficulty_breathing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Difficulty breathing"
        android:textAppearance="?android:textAppearanceMedium"/>

    <Spinner
        android:id="@+id/spinnerFatigue"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="Fatigue"
        android:textAppearance="?android:textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerRunny_nose"
        android:hint="Runny nose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerdiarrhea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:textAppearanceMedium"
        android:hint="Diarrhea" />



    <Button
        android:id="@+id/buttonsubmitcheckup"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_height="wrap_content"
        android:text="Submit Patient Checkup" />

    <TextView
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
